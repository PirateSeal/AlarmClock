@model AlarmClock.WebApp.Models.AccountViewModels.LoginViewModel
@{ViewData["Title"] = "Se connecter via spi.AlarmClock"; }
<div class="Title">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="register">
    <a asp-action="Register">
        Register
    </a>
</div>

<form asp-controller="Account" id="login" asp-action="Login" method="post">
    @if (!ViewContext.ViewData.ModelState.IsValid) {
    <div asp-validation-summary="All"></div>
    }

    <div class="field-email active">
        <i class="fas fa-at"></i>
        <input asp-for="Email" type="email" placeholder="Enter email adress" required />
        <i class="fas fa-chevron-right"></i>
    </div>

    <div class="field-password inactive">
        <i class="fas fa-chevron-left"></i>
        <i class="fas fa-key"></i>
        <input asp-for="Password" type="password" placeholder="Enter password" required />
        <i class="fas fa-chevron-right"></i>
    </div>

    <div class="field-send inactive">
        <i class="fas fa-chevron-left"></i>
        <button type="submit">Login</button>
    </div>

</form>
